{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DataSmith",
  "version": "1.9.0",
  "identifier": "com.mzafarm.datasmith",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "decorations": true,
        "title": "DataSmith",
        "width": 1350,
        "height": 825,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["../sidecar/populator"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "permissions": ["dialog:default", "dialogue:allow-save"],
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERBQTE2NDE1MjA1RjVGNjgKUldSb1gxOGdGV1NoMnA0OUhFSmpTN1JaVTMzM1UvelEvMnd0ZEw3Tmx2UENQSWhqb25scXl3R3gK",
      "endpoints": [
        "https://github.com/MZaFaRM/DataSmith/blob/main/latest.json"
      ]
    },
    "windows": {
      "installMode": "passive"
    }
  }
}
